<div class="dashboard-post">
<section class="new-post">
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-url">post-content</label>
      <textarea id="post-url" name="post-url" rows="4" cols="50"> </textarea>
    </div>
    <button class="btn btn-primary" type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section class="user-posts">
  <h2>Your Posts</h2>
    <ul>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}
</div>
<script src="/javascript/add-post.js"></script>